{
  /* Configure integrated VS Code Terminal */
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": true,
    "panel": "dedicated",
    "showReuseMessage": true,
  },
  "tasks": [
    {
      "label": "CrossBuildDeployAndRemoteDebug",
      "dependsOrder": "sequence",
      "dependsOn": [
        "CrossBuild",
        "CrossDeploy",
        "RemoteDebug"
      ]
    },
    {
      "label": "RemoteDebug",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/scripts/launchRemoteGDB.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "SRC_DIR": "${workspaceFolder}",
          "ENVIRONMENT_SCRIPT": "${config:ARCADIA_QEMU.ENVIRONMENT_SCRIPT}"
        }
      }
    },
    {
      "label": "CrossBuild",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/scripts/build.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "SRC_DIR": "${workspaceFolder}",
          "ENVIRONMENT_SCRIPT": "${config:ARCADIA_QEMU.ENVIRONMENT_SCRIPT}"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CrossDeploy",
      "type": "shell",
      "command": "scp",
      "args": [
        "-o",
        "StrictHostKeyChecking=no",
        "-o",
        "UserKnownHostsFile=/dev/null",
        "-P",
        "${config:ARCADIA_QEMU.TARGET_SCP_PORT}",
        "${workspaceFolder}/crossbuild/debug/glplay",
        "${config:ARCADIA_QEMU.TARGET_USER}@${config:ARCADIA_QEMU.TARGET_IP}:/home/${config:ARCADIA_QEMU.TARGET_USER}/glplay"
      ],
      "options": {
        "cwd": "${workspaceFolder}/crossbuild/debug/"
      }
    },
    {
      "label": "EnsureDebugBuildOutput",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/build/debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "CleanUpDebugBuildOutput",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build/debug/* | true"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "CMake_Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "-GNinja",
        "../../"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      }
    },
    {
      "label": "Build_With_Ninja",
      "type": "shell",
      "command": "ninja",
      "args": [
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      }
    },
    {
      "label": "Build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "EnsureDebugBuildOutput",
        "CleanUpDebugBuildOutput",
        "CMake_Debug",
        "Build_With_Ninja"
      ],
      "options": {
        "env": {
          "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
          "CMAKE_C_COMPILER": "/usr/bin/clang"
        }
      }
    }
  ],
  "version": "2.0.0"
}