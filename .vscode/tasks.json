{
  /* Configure integrated VS Code Terminal */
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": true,
    "panel": "dedicated",
    "showReuseMessage": true,
  },
  "tasks": [
    {
      "label": "CrossBuildAndDeploy",
      "dependsOrder": "sequence",
      "dependsOn": [
        "EnsureDebugCrossBuildOutput",
        "CleanUpDebugCrossBuildOutput",
        "CMakeCross_Debug",
        "CrossBuildd_With_Ninja",
        "DeployCrossBuild"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "DeployCrossBuild",
      "type": "shell",
      "command": "scp",
      "args": [
        "-o", "StrictHostKeyChecking=no",
        "-o", "UserKnownHostsFile=/dev/null",
        "-P", "${config:ARCADIA_QEMU.TARGET_SCP_PORT}",
        "${workspaceFolder}/crossbuild/debug/glplay",
        "${config:ARCADIA_QEMU.TARGET_USER}@${config:ARCADIA_QEMU.TARGET_IP}:/home/${config:ARCADIA_QEMU.TARGET_USER}/glplay"
        
      ],
      "options": {
        "cwd": "${workspaceFolder}/crossbuild/debug/"
      }
    },
    {
      "label": "EnsureDebugBuildOutput",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/build/debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "EnsureDebugCrossBuildOutput",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/crossbuild/debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "CleanUpDebugBuildOutput",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build/debug/* | true"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "CleanUpDebugCrossBuildOutput",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/crossbuild/debug/* | true"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "CMake_Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "-GNinja",
        "../../"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      }
    },
    {
      "label": "CMakeCross_Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_CXX_COMPILER=${config:ARCADIA_QEMU.CXX}",
        "-DCMAKE_C_COMPILER=${config:ARCADIA_QEMU.CC}",
        "-DCMAKE_SYSROOT=${config:ARCADIA_QEMU.SDKTARGETSYSROOT}",
        "-GNinja",
        "../../"
      ],
      "options": {
        "cwd": "${workspaceFolder}/crossbuild/debug"
      }
    },
    {
      "label": "Build_With_Ninja",
      "type": "shell",
      "command": "ninja",
      "args": [
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      }
    },
    {
      "label": "CrossBuildd_With_Ninja",
      "type": "shell",
      "command": "ninja",
      "args": [
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/crossbuild/debug"
      }
    },
    {
      "label": "Build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "EnsureDebugBuildOutput",
        "CleanUpDebugBuildOutput",
        "CMake_Debug",
        "Build_With_Ninja"
      ],
      "options": {
        "env": {
          "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
          "CMAKE_C_COMPILER": "/usr/bin/clang"
        }
      }
    }
  ],
  "version": "2.0.0"
}